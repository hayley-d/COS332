<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Distributed Systems Test</title>
</head>
<body>
<main class="container">
    <h1> Welcome to the Distributed Systems Test </h1>
    <h2>{{message}}</h2>
    <form method="POST" enctype="multipart/form-data" action="/answer">
        <input type="hidden" name="question_id" id="question_id" value="{{ question_id }}"/>
        <input type="hidden" name="client_id" id="client_id" value="{{ client_id }}"/>
            {% for option in question.options %}
                <div>
                    <input type="checkbox" name="answer" value="{{ loop.index }}" />
                    <label>{{ option }}</label>
                </div>
            {% endfor %}        
            <button type="submit" class="btn btn-primary mt-3">Submit Answer</button>
    </form>

    <form method="POST" action="/results">
        <button type="submit" class="btn btn-primary mt-3">Get Test Results</button>
    </form>
</main>
</body>
</html>
